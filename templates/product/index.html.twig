{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th>naam</th>
            <th>image</th>
            <th>description</th>
            <th>category</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{  product.image }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.category.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
